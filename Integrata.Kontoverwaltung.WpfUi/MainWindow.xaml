<Window x:Class="Integrata.Kontoverwaltung.WpfUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Integrata.Kontoverwaltung.WpfUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Name="txtName" Margin="5"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
            <RadioButton Name="rbGirokonto" Margin="5" IsChecked="True">Girokonto</RadioButton>
            <RadioButton Name="rbSparbuch" Margin="5">Sparbuch</RadioButton>
        </StackPanel>
        <Button Grid.Column="0" Grid.Row="2" Name="btnNeu" Margin="5" Click="btnNeu_Click">Neues Konto Anlegen</Button>
        <ListBox Grid.Column="0" Grid.Row="3" Grid.RowSpan="2" Name="lstKonto" Margin="5" DisplayMemberPath="Anzeigename" SelectionChanged="lstKonto_SelectionChanged"/>
        <TextBox Grid.Column="1" Grid.Row="0" Name="txtBetrag" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="1" Name="btnEinzahlen" Margin="5" Click="btnEinzahlen_Click">Einzahlen</Button>
        <Button Grid.Column="1" Grid.Row="2" Name="btnAuszahlen" Margin="5" Click="btnAuszahlen_Click">Auszahlen</Button>
        <Button Grid.Column="1" Grid.Row="3" Name="btnMonatsabschluss" Click="btnMonatsabschluss_Click" Margin="5">Monatsabschluss</Button>
        <StackPanel Grid.Column="1" Grid.Row="4" >
            <TextBox Name="txtCurrentSaldo" Margin="5" IsReadOnly="True" MaxHeight="25" VerticalAlignment="Top"/>
            <Button Name="btnSortieren" Margin="5" Click="btnSortieren_Click">Sortieren</Button>
            <Button Name="btnFilter" Margin="5" Click="btnFilter_Click">Filter</Button>
            <Button Name="btnTransformation" Margin="5" Click="btnTransformation_Click">Transformation</Button>
            <Button Name="btnReset" Margin="5" Click="btnReset_Click">Reset</Button>
        </StackPanel>
        <DataGrid Grid.Column="2" Grid.Row="0" Grid.RowSpan="5" Name="dgKontoDetails" Margin="5" AutoGenerateColumns="True" IsReadOnly="True"/>
        <StatusBar Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3" Name="statusBar" Margin="0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5" Name="txtKontoName"></TextBlock>
                    <TextBlock Margin="5" Name="txtAktuellerSaldo">0,00</TextBlock>
                    <TextBlock Margin="1,5,5,5" Name="txtWaehrung">€</TextBlock>
                    <TextBlock Margin="5" Name="txtIban"></TextBlock>
                    <TextBlock Margin="5" Name="txtKontotyp"></TextBlock>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
